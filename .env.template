# ANALYTICS & MONITORING
# =====================================================
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
GOOGLE_TAG_MANAGER_ID=GTM-XXXXXXX

# Error tracking (optional)
SENTRY_DSN=your_sentry_dsn_here

# =====================================================
# DEVELOPMENT CONFIGURATION
# =====================================================
DEBUG=true
LOG_LEVEL=debug

# Database connection for local development
DATABASE_URL=postgresql://postgres:password@localhost:5432/cl4pdf_dev

# =====================================================
# HEROKU DEPLOYMENT CONFIGURATION
# =====================================================
# These are set automatically by Heroku, but can be overridden
HEROKU_APP_NAME=your_heroku_app_name
HEROKU_SLUG_COMMIT=auto_set_by_heroku

# Buildpack configuration
BUILDPACK_URL=heroku/nodejs  # or heroku/python

# =====================================================
# FEATURE FLAGS
# =====================================================
ENABLE_REGISTRATION=true
ENABLE_GUEST_UPLOADS=true
ENABLE_API_ACCESS=false
ENABLE_PREMIUM_FEATURES=true
ENABLE_ANALYTICS=true

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100  # per window

# =====================================================
# THIRD-PARTY INTEGRATIONS
# =====================================================
# Google Drive integration (optional)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Dropbox integration (optional)
DROPBOX_APP_KEY=your_dropbox_app_key
DROPBOX_APP_SECRET=your_dropbox_app_secret

